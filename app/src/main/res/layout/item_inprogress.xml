<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/detail_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:padding="10dp"
        android:background="@drawable/shape_square">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nama_laundry"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="#000"
                tools:text="Khalifah Laundry"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/detail_order"
                android:layout_below="@id/nama_laundry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                tools:text="Kiloan Biasa (4kg)"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/harga_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorMarlo"
                tools:text="Rp 24.000" />

        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="-2dp"
        android:layout_below="@+id/detail_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="19dp"
                android:background="@drawable/border_left"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="19dp"
                android:background="@drawable/border_left"/>
            <ImageView
                android:id="@+id/image1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_motorcycle_black_24dp"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:background="@drawable/shape_circle"/>
            <TextView
                android:id="@+id/title1"
                android:layout_toRightOf="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="Pesanan Diambil"
                android:textColor="@color/colorAccent"
                android:textAllCaps="true"/>
            <TextView
                android:layout_below="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image1"
                android:textSize="12sp"
                android:text="Minggu, 25/06/2017 · 03:40 WIB"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="19dp"
                android:background="@drawable/border_left"/>
            <ImageView
                android:id="@+id/image2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_people"
                android:padding="8dp"
                android:background="@drawable/shape_circle"/>
            <TextView
                android:id="@+id/title2"
                android:layout_toRightOf="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dalam Antrian"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:textAllCaps="true"/>
            <TextView
                android:layout_below="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/image2"
                android:text="Minggu, 25/06/2017 · 03:40 WIB"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="19dp"
                android:background="@drawable/border_left"/>
            <ImageView
                android:id="@+id/image3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_local_laundry_service"
                android:padding="8dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_circle"/>
            <TextView
                android:id="@+id/title3"
                android:layout_toRightOf="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sedang Dicuci"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:textAllCaps="true"/>
            <TextView
                android:layout_below="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/image3"
                android:text="Minggu, 25/06/2017 · 03:40 WIB"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="19dp"
                android:background="@drawable/border_left"/>
            <ImageView
                android:id="@+id/image4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_shopping_basket"
                android:padding="8dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_red"/>
            <TextView
                android:id="@+id/title4"
                android:layout_toRightOf="@+id/image4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Pesanan Selesai"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorMarlo"
                android:textAllCaps="true"/>
            <TextView
                android:layout_below="@+id/title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image4"
                android:text="Menunggu"
                android:textColor="@color/colorMarlo"
                android:textStyle="italic"
                android:textSize="12sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="19dp"
                android:background="@drawable/border_left"/>
            <ImageView
                android:id="@+id/image5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_motorcycle_black_24dp"
                android:padding="8dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_circle"/>
            <TextView
                android:id="@+id/title5"
                android:layout_toRightOf="@+id/image5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Pesanan Diterima"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:textAllCaps="true"/>
            <TextView
                android:layout_below="@+id/title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image5"
                android:textSize="12sp"
                android:text="Menunggu"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
