<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ziterz.marlo.User.FeedbackActivity">
    <RelativeLayout
        android:id="@+id/feedback_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <ImageView
            android:id="@+id/image_feedback"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/marlo_launcher"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>
        <EditText
            android:id="@+id/textarea_feedback"
            android:layout_below="@id/image_feedback"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:minHeight="100dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_all"
            android:hint="Tuliskan pendapat dan masukan disini"
            android:textSize="15sp"
            android:gravity="top|left"
            android:inputType="textMultiLine"/>
        <TextView
            android:layout_below="@+id/textarea_feedback"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Terima kasih, pendapat dan masukan anda akan sangat membantu kami."/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="@color/colorMarlo"
        android:layout_height="45dp"></RelativeLayout>
    <RelativeLayout
        android:id="@+id/feedback_button"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/pesan_laundry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kirim Masukan"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
