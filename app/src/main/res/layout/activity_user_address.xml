<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ziterz.marlo.User.UserAddressActivity">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        app:srcCompat="@drawable/placeholder"/>
    <RelativeLayout
        android:layout_below="@+id/map"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/text_address"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:hint="Alamat"
            android:inputType="text"/>
        <EditText
            android:id="@+id/detail_address"
            android:layout_below="@+id/text_address"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:hint="Detail alamat"
            android:inputType="text"/>
        <LinearLayout
            android:id="@+id/text_date_time"
            android:layout_below="@+id/detail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/text_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:editable="false"
                android:focusable="false"
                android:cursorVisible="true"
                android:inputType="date"/>
            <EditText
                android:id="@+id/text_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:editable="false"
                android:focusable="false"
                android:cursorVisible="true"
                android:inputType="time"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="@color/colorMarlo"
        android:layout_height="45dp"></RelativeLayout>
    <RelativeLayout
        android:id="@+id/detail_order_btn"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/pesan_laundry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lanjutkan Pemesanan"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>
