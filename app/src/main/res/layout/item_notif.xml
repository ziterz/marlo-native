<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/img_notif"
            android:layout_marginRight="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_notif"/>
        <TextView
            android:layout_toRightOf="@+id/img_notif"
            android:id="@+id/nama_laundry"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            tools:text="From Khalifah Laundry"
            android:textSize="14sp"/>
        <TextView
            android:layout_toRightOf="@+id/img_notif"
            android:id="@+id/detail_order"
            android:layout_below="@id/nama_laundry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            tools:text="Pesanan anda sedang dalam antrian cucian"/>
    </RelativeLayout>

</RelativeLayout>
